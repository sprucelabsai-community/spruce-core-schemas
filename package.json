{
	"name": "@sprucelabs/spruce-core-schemas",
	"publishConfig": {
		"access": "public"
	},
	"version": "22.2.33",
	"files": [
		"build/**/*",
		"tsconfig.json"
	],
	"main": "./build/index.js",
	"types": "./build/index.d.ts",
	"exports": {
		".": {
			"node": "./build/index.js",
			"require": "./build/index.js",
			"import": "./build/esm/index.js",
			"default": "./build/esm/index.js"
		}
	},
	"module": "./build/esm/index.js",
	"license": "MIT",
	"description": "The schemas that Mercury and all skills use. ü§ù",
	"keywords": [
		"node",
		"sprucelabs"
	],
	"homepage": "https://github.com/sprucelabsai/spruce-cli",
	"bugs": {
		"url": "https://github.com/sprucelabsai/spruce-cli/issues"
	},
	"scripts": {
		"build.dev": "yarn build.tsc && yarn resolve-paths",
		"build.copy-files": "mkdir -p build/.spruce && cp -r ./src/.spruce/settings.json build/.spruce/settings.json",
		"build.dist": "yarn build.tsc && tsc --project tsconfig.dist.json && yarn resolve-paths && yarn build.esm-postbuild",
		"build.esm-postbuild": "esm-postbuild --target build/esm --patterns '**/*.js'",
		"build.tsc": "yarn build.copy-files && tsc",
		"clean": "rm -rf build/",
		"clean.all": "rm -rf node_modules/ yarn.lock ; yarn clean",
		"fix.lint": "eslint --fix '**/*.ts'",
		"lint": "eslint '**/*.ts' && tsc -p . --noEmit",
		"rebuild": "yarn clean.all && yarn && yarn build.dev",
		"release": "semantic-release",
		"resolve-paths": "resolve-path-aliases --target build --patterns **/*.js,**/*.d.ts",
		"upgrade.packages": "yarn-upgrade-all && rm -f yarn.lock && yarn ; yarn fix.lint ; true",
		"upgrade.packages.all": "yarn install && yarn upgrade.packages",
		"upgrade.packages.test": "yarn upgrade.packages.all && yarn lint && yarn build.dev && yarn test",
		"watch.build.dev": "yarn build.tsc -w",
		"watch.lint": "chokidar 'src/**/*' '../spruce-templates/src/**' -c 'yarn lint.tsc'"
	},
	"dependencies": {
		"@sprucelabs/schema": "latest"
	},
	"devDependencies": {
		"@sprucelabs/babel-plugin-schema": "latest",
		"@sprucelabs/esm-postbuild": "latest",
		"@sprucelabs/semantic-release": "latest",
		"@types/node": "^14.14.31",
		"chokidar-cli": "^2.1.0",
		"concurrently": "^6.0.0",
		"conventional-changelog-sprucelabs": "latest",
		"eslint": "^7.21.0",
		"eslint-config-spruce": "latest",
		"prettier": "^2.2.1",
		"ts-node": "^9.1.1",
		"tsconfig-paths": "^3.9.0",
		"typescript": "^4.2.2",
		"yarn-upgrade-all": "^0.5.4"
	},
	"yarn-upgrade-all": {
		"ignore": [
			"@sprucelabs/babel-plugin-schema",
			"@sprucelabs/esm-postbuild",
			"@sprucelabs/semantic-release",
			"@sprucelabs/schema",
			"conventional-changelog-sprucelabs",
			"eslint-config-spruce"
		]
	}
}
