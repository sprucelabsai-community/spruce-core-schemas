{
	"name": "@sprucelabs/spruce-core-schemas",
	"publishConfig": {
		"access": "public"
	},
	"version": "22.0.17",
	"main": "./build/index.js",
	"types": "./build/index.d.ts",
	"license": "MIT",
	"files": [
		"build/**/*",
		"tsconfig.json"
	],
	"description": "The schemas that Mercury and all skills use. 🤝",
	"keywords": [
		"node",
		"sprucelabs"
	],
	"homepage": "https://github.com/sprucelabsai/spruce-cli",
	"bugs": {
		"url": "https://github.com/sprucelabsai/spruce-cli/issues"
	},
	"scripts": {
		"build": "yarn build.babel && yarn build.types && yarn build.resolve-paths",
		"build.types": "tsc --emitDeclarationOnly && echo PASS",
		"build.babel": "babel src --out-dir build --extensions \".ts,.tsx\" --source-maps --copy-files",
		"build.watch": "concurrently 'yarn run build.babel --watch' \"chokidar 'src/**/*' -c 'yarn build.types'\"",
		"build.resolve-paths": "resolve-path-aliases --target build --patterns **/*.js,**/*.d.ts",
		"rebuild": "yarn clean && yarn && yarn build",
		"clean": "rm -rf node_modules ; rm -rf build/ ; true",
		"lint": "eslint '**/*.ts' && tsc -p . --noEmit",
		"lint.fix": "eslint --fix '**/*.ts'",
		"lint.watch": "chokidar 'src/**/*' '../spruce-templates/src/**' -c 'yarn lint.tsc'",
		"release": "semantic-release",
		"upgrade.packages": "yarn upgrade --latest && rm yarn.lock | true && yarn | true && yarn lint.fix | true",
		"upgrade.packages.all": "yarn install && yarn upgrade.packages",
		"upgrade.packages.test": "yarn upgrade.packages.all && yarn lint && yarn build && yarn test"
	},
	"dependencies": {
		"@sprucelabs/schema": "^19.0.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.11.6",
		"@babel/core": "^7.11.6",
		"@babel/plugin-proposal-class-properties": "^7.10.4",
		"@babel/plugin-proposal-decorators": "^7.10.5",
		"@babel/plugin-transform-runtime": "^7.11.5",
		"@babel/preset-env": "^7.11.5",
		"@babel/preset-typescript": "^7.10.4",
		"@sprucelabs/babel-plugin-schema": ">=3.1.2",
		"@sprucelabs/semantic-release": ">=4.0.6",
		"@types/node": "^14.11.8",
		"babel-plugin-module-resolver": "^4.0.0",
		"chokidar-cli": "^2.1.0",
		"concurrently": "^5.3.0",
		"conventional-changelog-sprucelabs": "^1.1.2",
		"eslint": "^7.11.0",
		"eslint-config-spruce": "10.9.125",
		"prettier": "^2.1.2",
		"ts-node": "^9.0.0",
		"tsconfig-paths": "^3.9.0",
		"typescript": "^4.0.3"
	}
}
