{
	"name": "@sprucelabs/spruce-core-schemas",
	"publishConfig": {
		"access": "public"
	},
	"version": "22.2.27",
	"files": [
		"build/**/*",
		"tsconfig.json"
	],
	"main": "./build/index.js",
	"types": "./build/index.d.ts",
	"exports": {
        ".": {
            "node": "./build/index.js",
            "require": "./build/index.js",
            "import": "./build/esm/index.js",
            "default": "./build/esm/index.js"
        }
    },
    "module": "./build/esm/index.js",
	"license": "MIT",
	"description": "The schemas that Mercury and all skills use. ü§ù",
	"keywords": [
		"node",
		"sprucelabs"
	],
	"homepage": "https://github.com/sprucelabsai/spruce-cli",
	"bugs": {
		"url": "https://github.com/sprucelabsai/spruce-cli/issues"
	},
	"scripts": {
		"build": "yarn build.babel && yarn build.types && yarn build.dist && yarn resolve-paths",
		"build.dist": "tsc --project tsconfig.dist.json",
		"build.types": "tsc --emitDeclarationOnly && echo PASS",
		"build.babel": "babel src --out-dir build --extensions \".ts,.tsx\" --source-maps --copy-files",
		"resolve-paths": "resolve-path-aliases --target build --patterns **/*.js,**/*.d.ts",
		"rebuild": "rm yarn.lock | true && yarn clean.all && yarn && yarn build",
		"clean": "rm -rf build/ ; true",
		"clean.all": "rm -rf build/ && rm -rf node_modules/ && rm -f yarn.lock",
		"lint": "eslint '**/*.ts' && tsc -p . --noEmit",
		"fix.lint": "eslint --fix '**/*.ts'",
		"watch.build": "concurrently 'yarn run build.babel --watch' 'tsc --emitDeclarationOnly -w'",
		"watch.lint": "chokidar 'src/**/*' '../spruce-templates/src/**' -c 'yarn lint.tsc'",
		"release": "semantic-release",
		"upgrade.packages": "yarn-upgrade-all && rm -f yarn.lock && yarn ; yarn fix.lint || true",
		"upgrade.packages.all": "yarn install && yarn upgrade.packages",
		"upgrade.packages.test": "yarn upgrade.packages.all && yarn lint && yarn build && yarn test"
	},
	"dependencies": {
		"@babel/runtime": "^7.13.7",
		"@sprucelabs/schema": "latest"
	},
	"devDependencies": {
		"@babel/cli": "^7.13.0",
		"@babel/core": "^7.13.1",
		"@babel/plugin-proposal-class-properties": "^7.13.0",
		"@babel/plugin-proposal-decorators": "^7.13.5",
		"@babel/plugin-transform-runtime": "^7.13.7",
		"@babel/preset-env": "^7.13.5",
		"@babel/preset-typescript": "^7.13.0",
		"@sprucelabs/babel-plugin-schema": "latest",
		"@sprucelabs/semantic-release": "latest",
		"@types/node": "^14.14.31",
		"babel-plugin-module-resolver": "^4.1.0",
		"chokidar-cli": "^2.1.0",
		"concurrently": "^6.0.0",
		"conventional-changelog-sprucelabs": "latest",
		"eslint": "^7.20.0",
		"eslint-config-spruce": "latest",
		"prettier": "^2.2.1",
		"ts-node": "^9.1.1",
		"tsconfig-paths": "^3.9.0",
		"typescript": "^4.2.2",
		"yarn-upgrade-all": "^0.5.4"
	},
	"yarn-upgrade-all": {
		"ignore": [
			"@sprucelabs/babel-plugin-schema",
			"@sprucelabs/semantic-release",
			"@sprucelabs/schema",
			"conventional-changelog-sprucelabs",
			"eslint-config-spruce"
		]
	}
}
