{
  "name": "@sprucelabs/spruce-core-schemas",
  "publishConfig": {
    "access": "public"
  },
  "version": "35.1.150",
  "files": [
    "build/**/*",
    "tsconfig.json"
  ],
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "module": "./build/esm/index.js",
  "sideEffects": false,
  "license": "MIT",
  "skill": {
    "namespace": "spruce",
    "commandOverrides": {
      "sync.schemas": "--shouldFetchCoreSchemas false --moduleToImportFromWhenRemote @sprucelabs/spruce-core-schemas"
    },
    "upgradeIgnoreList": [
      "@sprucelabs/spruce-core-schemas",
      "@sprucelabs/spruce-skill-utils",
      "@sprucelabs/spruce-test-fixtures"
    ]
  },
  "description": "The schemas that Mercury and all skills use. ü§ù",
  "keywords": [
    "node",
    "sprucelabs"
  ],
  "homepage": "https://github.com/sprucelabsai/spruce-cli",
  "bugs": {
    "url": "https://github.com/sprucelabsai/spruce-cli/issues"
  },
  "scripts": {
    "build.ci": "yarn build.tsc && yarn build.resolve-paths && yarn lint",
    "build.copy-files": "mkdir -p build && rsync -avzq --exclude='*.ts' ./src/ ./build/",
    "build.dev": "yarn build.tsc --sourceMap ; yarn resolve-paths.lint",
    "build.dist": "tsc --project tsconfig.dist.json && yarn build.resolve-paths && mv build esm && yarn build.esm-postbuild && yarn build.tsc && yarn build.resolve-paths && mv esm build/ && yarn clean.dist",
    "build.esm-postbuild": "esm-postbuild --target esm --patterns '**/*.js'",
    "build.resolve-paths": "resolve-path-aliases --target build --patterns '**/*.js,**/*.d.ts'",
    "build.tsc": "yarn build.copy-files && tsc",
    "clean": "yarn clean.build",
    "clean.all": "yarn clean.dependencies && yarn clean.build",
    "clean.build": "rm -rf build/",
    "clean.dependencies": "rm -rf node_modules/ package-lock.json yarn.lock",
    "clean.dist": "rm -rf build/__tests__ build/esm/__tests__",
    "fix.lint": "eslint --fix --cache '**/*.ts'",
    "lint": "eslint --cache '**/*.ts'",
    "rebuild": "yarn clean.all && yarn && yarn build.dev",
    "release": "semantic-release",
    "update.dependencies": "yarn clean.dependencies && yarn",
    "upgrade.packages": "yarn-upgrade-all && rm -f yarn.lock ; yarn ; yarn fix.lint ; true",
    "upgrade.packages.all": "yarn install && yarn upgrade.packages",
    "upgrade.packages.test": "yarn upgrade.packages.all && yarn lint && yarn build.dev && yarn test",
    "watch.build.dev": "tsc-watch --sourceMap --onCompilationComplete 'yarn post.watch.build'",
    "watch.lint": "concurrently 'yarn lint' \"chokidar 'src/**/*' -c 'yarn lint.tsc'\"",
    "lint.tsc": "tsc -p . --noEmit",
    "post.watch.build": "yarn build.copy-files && yarn build.resolve-paths",
    "resolve-paths.lint": "yarn build.resolve-paths ; yarn lint",
    "test": "jest",
    "watch.tsc": "tsc -w",
    "watch.rebuild": "yarn clean.all && yarn && yarn watch.build.dev"
  },
  "dependencies": {
    "@sprucelabs/schema": "^28.5.115"
  },
  "devDependencies": {
    "@sprucelabs/esm-postbuild": "^2.0.77",
    "@sprucelabs/jest-json-reporter": "^6.0.554",
    "@sprucelabs/resolve-path-aliases": "^1.1.168",
    "@sprucelabs/semantic-release": "^4.0.8",
    "@sprucelabs/test": "^7.7.413",
    "@sprucelabs/test-utils": "^3.2.104",
    "@types/node": "^18.11.18",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^7.6.0",
    "date-fns-tz": "^1.3.7",
    "eslint": "^8.32.0",
    "eslint-config-spruce": "^10.12.0",
    "jest": "^29.4.0",
    "jest-circus": "^29.4.0",
    "prettier": "^2.8.3",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.0.0",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.4",
    "yarn-upgrade-all": "^0.7.2"
  },
  "jest": {
    "testRunner": "jest-circus/runner",
    "maxWorkers": 4,
    "testTimeout": 120000,
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/tmp/",
      "<rootDir>/src/",
      "<rootDir>/node_modules/",
      "<rootDir>/build/__tests__/testDirsAndFiles/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js?(x)"
    ],
    "moduleNameMapper": {
      "^#spruce/(.*)$": "<rootDir>/build/.spruce/$1"
    }
  }
}
